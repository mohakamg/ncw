<div class="container form-wrapper2">
    <%= form_for @teacher do |f| %>

    <% if @teacher.errors.any? %>
      <h1><%= pluralize(@teacher.errors.count, "Errors") %> Prevented the Update </h1>
        <% @teacher.errors.full_messages.each do |e| %>
          <li><%= e %></li>
        <% end %>
    <% end %>

        <div class="form-group">
          <% if @teacher.profile_pic? %>
            <%= image_tag @teacher.profile_pic.thumb %><br>
            <%= f.label "Change Profile Photo" %>
            <%= f.file_field :pic %>
