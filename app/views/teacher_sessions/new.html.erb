<div class="container form-wrapper">
    <%= form_tag '/teacher_sessions' do %>

        <div class="form-group">
            <%= label_tag "Email" %><br>
            <%= email_field_tag :email, "", class: "form-control" %>
        </div>

        <div class="form-group">
            <%= label_tag "Password" %><br>
            <%= password_field_tag :password, "", class: "form-control" %>
        </div>

        <%= submit_tag "Log In!", class: "btn btn-success form-control" %>
        <p class="text-center"><%= link_to "Dont' have a Teaching Account? Sign Up!", new_teacher_path %></p>

        <p class="text-center"><%= link_to "Forgot Password? ", reset_password_path %></p>
    <% end %>
</div>
